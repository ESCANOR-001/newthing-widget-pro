<?xml version="1.0" encoding="utf-8"?>
<!-- Preview drawable for Charging Widget in battery section -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A1A1A" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Lightning bolt icon placeholder -->
    <item
        android:left="24dp"
        android:top="16dp"
        android:right="160dp"
        android:bottom="80dp">
        <shape android:shape="oval">
            <solid android:color="#333333" />
        </shape>
    </item>
    
    <!-- Progress bar track -->
    <item
        android:left="16dp"
        android:top="90dp"
        android:right="16dp"
        android:bottom="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#333333" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Progress bar fill (red) -->
    <item
        android:left="20dp"
        android:top="94dp"
        android:right="80dp"
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#E22E31" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
