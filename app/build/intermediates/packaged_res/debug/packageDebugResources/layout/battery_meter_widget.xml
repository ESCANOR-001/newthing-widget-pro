<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_container"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:padding="8dp">

    <!-- Main card background -->
    <LinearLayout
        android:id="@+id/battery_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/square_battery_widget_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top: BATTERY label -->
        <TextView
            android:id="@+id/battery_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nothing_5_7"
            android:text="BATTERY"
            android:textColor="#808080"
            android:textSize="20sp"
            tools:text="BATTERY" />

        <!-- Middle: Battery figure with 10 segments -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Battery body with segments -->
            <LinearLayout
                android:id="@+id/segment_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/battery_meter_outline"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Segment 1 (0-10%) -->
                <ImageView
                    android:id="@+id/segment_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/battery_meter_segment_empty" />

                <!-- Segment 2 (11-20%) -->
                <ImageView
                    android:id="@+id/segment_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/battery_meter_segment_empty" />

                <!-- Segment 3 (21-30%) -->
                <ImageView
                    android:id="@+id/segment_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/battery_meter_segment_empty" />

                <!-- Segment 4 (31-40%) -->
                <ImageView
                    android:id="@+id/segment_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/battery_meter_segment_empty" />

                <!-- Segment 5 (41-50%) -->
                <ImageView
                    android:id="@+id/segment_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/battery_meter_segment_empty" />

                <!-- Segment 6 (51-60%) -->
                <ImageView
                    android:id="@+id/segment_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/battery_meter_segment_empty" />

                <!-- Segment 7 (61-70%) -->
                <ImageView
                    android:id="@+id/segment_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/battery_meter_segment_empty" />

                <!-- Segment 8 (71-80%) -->
                <ImageView
                    android:id="@+id/segment_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/battery_meter_segment_empty" />

                <!-- Segment 9 (81-90%) -->
                <ImageView
                    android:id="@+id/segment_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/battery_meter_segment_empty" />

                <!-- Segment 10 (91-100%) -->
                <ImageView
                    android:id="@+id/segment_10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/battery_meter_segment_empty" />

            </LinearLayout>

            <!-- Battery tip -->
            <TextView
                android:layout_width="8dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/battery_meter_tip" />

        </LinearLayout>

        <!-- Battery percentage (rendered as bitmap for custom font) -->
        <ImageView
            android:id="@+id/battery_percentage_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:contentDescription="Battery percentage"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription" />

        <!-- Bottom: Time remaining -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nothing_5_7"
                android:text="4H20M"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:text="4H20M" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/nothing_5_7"
                android:text="REMAINING"
                android:textColor="@color/red_color"
                android:textSize="16sp"
                tools:text="REMAINING" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>