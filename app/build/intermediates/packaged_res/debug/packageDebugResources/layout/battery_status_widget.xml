<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_container"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:padding="8dp">

    <!-- Main card background -->
    <LinearLayout
        android:id="@+id/battery_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/square_battery_widget_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top row: SYSTEM text + Battery icon -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Left: SYSTEM and charging status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/system_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.1"
                    android:text="SYSTEM"
                    android:textColor="#808080"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="SYSTEM" />

                <!-- Charging status with bolt icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/charging_bolt_small"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_bolt_filled"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/charging_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:text="DISCHARGING"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        tools:text="DISCHARGING" />

                </LinearLayout>

            </LinearLayout>

            <!-- Right: Battery icon -->
            <ImageView
                android:id="@+id/battery_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_battery_charging"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <!-- Spacer -->
        <TextView
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Center: Large percentage -->
        <TextView
            android:id="@+id/battery_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:text="78%"
            android:textColor="@color/red_color"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:text="78%" />

        <!-- Progress bar -->
        <ProgressBar
            android:id="@+id/battery_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:max="100"
            android:progress="78"
            android:progressDrawable="@drawable/battery_status_progress" />

        <!-- Spacer -->
        <TextView
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Bottom: BATTERY label and time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/battery_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.05"
                android:text="BATTERY"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="BATTERY" />

            <TextView
                android:id="@+id/time_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="2h 14m left"
                android:textColor="#808080"
                android:textSize="12sp"
                tools:text="2h 14m left" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
