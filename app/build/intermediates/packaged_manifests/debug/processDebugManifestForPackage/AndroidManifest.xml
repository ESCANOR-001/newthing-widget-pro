<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.newthingwidgets.clone"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34" />

    <!-- Required for Android 11+ to query and launch other apps -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <!-- Required for foreground service (widget real-time updates) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Background service permissions -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Declare intent queries for launching apps -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <permission
        android:name="com.newthingwidgets.clone.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.newthingwidgets.clone.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.newthingwidgets.clone.MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.newthingwidgets.clone.WidgetDetailActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

        <!-- Analog Clock Widget Provider -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.AnalogClockWidgetProvider"
            android:exported="true"
            android:label="Analog Clock" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/analog_clock_widget_info" />
        </receiver>

        <!-- App Launcher Widget Provider -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.AppLauncherWidgetProvider"
            android:exported="true"
            android:label="App Launcher" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.newthingwidgets.clone.ACTION_LAUNCH_APP" />
                <action android:name="android.intent.action.DATE_CHANGED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/app_launcher_widget_info" />
        </receiver>

        <!-- Charging Widget Provider -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.ChargingWidgetProvider"
            android:exported="true"
            android:label="Charging Widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/charging_widget_info" />
        </receiver>

        <!-- Battery State Receiver for Charging Widget updates -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.BatteryStateReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>

        <!-- Square Battery Widget Provider -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.SquareBatteryWidgetProvider"
            android:exported="true"
            android:label="Square Battery Widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/square_battery_widget_info" />
        </receiver>

        <!-- Battery Bolt Widget Provider -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.BatteryBoltWidgetProvider"
            android:exported="true"
            android:label="Battery Bolt Widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/battery_bolt_widget_info" />
        </receiver>

        <!-- Battery Status Widget Provider -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.BatteryStatusWidgetProvider"
            android:exported="true"
            android:label="Battery Status Widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/battery_status_widget_info" />
        </receiver>

        <!-- Battery Meter Widget Provider -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.BatteryMeterWidgetProvider"
            android:exported="true"
            android:label="Battery Meter Widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/battery_meter_widget_info" />
        </receiver>

        <!-- Battery Dot Matrix Widget Provider -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.BatteryDotMatrixWidgetProvider"
            android:exported="true"
            android:label="Battery Dot Matrix Widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/battery_dot_matrix_widget_info" />
        </receiver>

        <!-- Calendar Widget Provider -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.CalendarWidgetProvider"
            android:exported="true"
            android:label="Calendar Widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.intent.action.DATE_CHANGED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/calendar_widget_info" />
        </receiver>

        <!-- Date Time Matrix Widget Provider -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.DateTimeMatrixWidgetProvider"
            android:exported="true"
            android:label="Date Time Matrix Widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.intent.action.TIME_TICK" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/date_time_matrix_widget_info" />
        </receiver>

        <!-- Date Clock Widget Provider -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.DateClockWidgetProvider"
            android:exported="true"
            android:label="Date Clock Widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.intent.action.TIME_TICK" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/date_clock_widget_info" />
        </receiver>

        <!-- Calendar Widget Provider -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.CalendarWidgetProvider"
            android:exported="true"
            android:label="Calendar Widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.intent.action.DATE_CHANGED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/calendar_widget_info" />
        </receiver>

        <!-- Dot Matrix Clock Widget Provider -->
        <receiver
            android:name="com.newthingwidgets.clone.widgets.DotMatrixClockWidgetProvider"
            android:exported="true"
            android:label="Dot Matrix Clock" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.intent.action.TIME_TICK" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/dot_matrix_clock_widget_info" />
        </receiver>

        <!-- Universal Widget Update Service -->
        <service
            android:name="com.newthingwidgets.clone.services.WidgetUpdateService"
            android:exported="false"
            android:foregroundServiceType="specialUse" >
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="widget_updates" />
        </service>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.newthingwidgets.clone.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>