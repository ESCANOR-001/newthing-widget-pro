<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:backgroundTint="#282A2C" app:cardCornerRadius="24dp" app:strokeWidth="0dp" app:cardElevation="0dp" style="?attr/materialCardViewFilledStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="145dp">

            <ImageView
                android:id="@+id/widget_preview"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:padding="16dp"
                android:scaleType="centerInside" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/widget_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Widget Name"
                android:textColor="?attr/bgColorInVerse"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/widget_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:gravity="center"
                android:text="1x1"
                android:textColor="?attr/bgColorInVerse"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
