<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:backgroundTint="?attr/bgColor2" app:cardCornerRadius="20dp" app:strokeColor="?attr/bgColor1" app:strokeWidth="3dp" style="?attr/materialCardViewElevatedStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="145dp">

            <ImageView
                android:id="@+id/widget_preview"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:padding="16dp"
                android:scaleType="centerInside" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/bgColor1"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/widget_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Widget Name"
                android:textColor="?attr/bgColorInVerse"
                android:textSize="13dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/widget_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:gravity="center"
                android:text="1x1"
                android:textColor="?attr/bgColorInVerse"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
