<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_container"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:padding="8dp">

    <!-- Main card background -->
    <FrameLayout
        android:id="@+id/battery_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/square_battery_widget_bg"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Large lightning bolt - positioned at bottom right, overflowing -->
        <ImageView
            android:id="@+id/bolt_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="-100dp"
            android:contentDescription="Battery level"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bolt_filled"
            tools:ignore="ContentDescription" />

        <!-- Text content overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingStart="20dp">

            <!-- Battery percentage (stacked: number + %) -->
            <TextView
                android:id="@+id/battery_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="-8dp"
                android:text="52%"
                android:textColor="@color/red_color"
                android:textSize="52sp"
                android:textStyle="bold"
                tools:text="52%" />

            <!-- Spacer -->
            <TextView
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Status text -->
            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Charged"
                android:textColor="#808080"
                android:textSize="24sp"
                tools:text="Charged" />

            <!-- Time remaining -->
            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2dp"
                android:text="2,5 hours\nfor full charge"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:text="2,5 hours\nfor full charge" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
